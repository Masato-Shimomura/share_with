<div class="container mt-4" style="max-width: 800px;">

  <!-- ページタイトル -->
  <h3 class="mb-4">投稿を編集する</h3>

  <div class="card">
    <div class="card-body">

      <!-- エラーメッセージ -->
      <% if @post.errors.any? %>
        <div class="alert alert-danger">
          <h5 class="mb-2">
            <%= pluralize(@post.errors.count, "件のエラー") %>があります
          </h5>
          <ul class="mb-0">
            <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: [:public, @group, @post], local: true do |f| %>

        <div class="mb-3">
          <%= f.label :title, "タイトル", class: "form-label" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :body, "本文", class: "form-label" %>
          <%= f.text_area :body, rows: 5, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :start_at, "開始日時", class: "form-label" %><br>
          <%= f.datetime_select :start_at %>
        </div>

        <div class="mb-4">
          <%= f.label :end_at, "終了日時", class: "form-label" %><br>
          <%= f.datetime_select :end_at %>
        </div>

        <!-- 操作ボタン -->
        <div class="d-flex justify-content-between">
          <%= link_to "戻る",
                      public_group_post_path(@group, @post),
                      class: "btn btn-light" %>

          <%= f.submit "更新する", class: "btn btn-primary" %>
        </div>

      <% end %>

    </div>
  </div>

</div>
