<div class="container mt-4" style="max-width: 700px;">

  <!-- ページタイトル -->
  <h2 class="mb-4">コメントを投稿する</h2>

  <!-- フォームカード -->
  <div class="card">
    <div class="card-body">

      <%= form_with model: @comment,
                    url: public_group_post_comments_path(@group, @post),
                    local: true do |f| %>

        <!-- エラーメッセージ -->
        <% if @comment.errors.any? %>
          <div class="alert alert-danger">
            <ul class="mb-0">
              <% @comment.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- コメント入力 -->
        <div class="mb-4">
          <%= f.label :body, "コメント内容", class: "form-label" %>
          <%= f.text_area :body,
                          rows: 5,
                          class: "form-control",
                          placeholder: "コメントを入力してください" %>
        </div>

        <!-- 操作ボタン -->
        <div class="d-flex justify-content-between">
          <%= link_to "コメント一覧に戻る",
                      public_group_post_comments_path(@group, @post),
                      class: "btn btn-outline-secondary" %>

          <%= f.submit "投稿する", class: "btn btn-primary" %>
        </div>

      <% end %>

    </div>
  </div>

</div>
