<h2>コメント一覧</h2>

<div class="mb-3">
  <%= link_to "＋ コメント投稿", new_public_group_post_comment_path(@group, @post), class: "btn btn-primary" %>
  <%= link_to "← グループ詳細に戻る", public_group_path(@group), class: "btn btn-secondary ml-2" %>
</div>

<% @comments.each do |comment| %>
  <div class="border rounded p-3 mb-2">
    <p><strong><%= comment.user.last_name %> <%= comment.user.first_name %></strong></p>
    <p><%= simple_format(comment.body) %></p>
    <p class="text-muted"><%= comment.created_at.strftime("%Y/%m/%d %H:%M") %></p>

    <% if comment.user == current_user %>
      <%= link_to "編集", edit_public_group_post_comment_path(@group, @post, comment), class: "btn btn-sm btn-warning" %>
      <%= link_to "削除", public_group_post_comment_path(@group, @post, comment), method: :delete, data: { confirm: "削除しますか？" }, class: "btn btn-sm btn-danger ml-2" %>
    <% end %>
  </div>
<% end %>