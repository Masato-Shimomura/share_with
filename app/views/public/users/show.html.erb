<div class="container mt-4" style="max-width: 600px;">

  <!-- ページタイトル -->
  <h2 class="mb-4">ユーザー詳細</h2>

  <!-- ユーザー情報 -->
  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title mb-3">ユーザー情報</h5>

      <p class="mb-0">
        <strong>名前：</strong>
        <%= @user.last_name %> <%= @user.first_name %>
      </p>
    </div>
  </div>

  <!-- アクション -->
  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title mb-3">操作</h5>

      <div class="d-grid gap-2">
        <%= link_to "既存グループに招待",
                    select_group_public_groups_path(user_id: @user.id),
                    class: "btn btn-success" %>

        <%= link_to "この人とグループを新規作成",
                    invite_public_groups_path(invited_user_ids: [@user.id]),
                    class: "btn btn-primary" %>
      </div>
    </div>
  </div>

  <!-- 戻る -->
  <div class="text-center">
    <%= link_to "ユーザー一覧に戻る",
                public_users_path,
                class: "btn btn-secondary" %>
  </div>

</div>
