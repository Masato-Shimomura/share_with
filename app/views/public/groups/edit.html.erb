<div class="container mt-4" style="max-width: 700px;">

  <!-- ページタイトル -->
  <h2 class="mb-4">グループ情報の編集</h2>

  <!-- 編集フォーム -->
  <div class="card">
    <div class="card-body">

      <%= form_with(model: @group,
                    url: public_group_path(@group),
                    method: :patch,
                    local: true) do |f| %>

        <% if @group.errors.any? %>
          <div class="alert alert-danger">
            <h5 class="alert-heading">
              <%= pluralize(@group.errors.count, "エラー") %> が発生しました
            </h5>
            <ul class="mb-0">
              <% @group.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.label :name, "グループ名", class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="mb-4">
          <%= f.label :explanation, "説明", class: "form-label" %>
          <%= f.text_area :explanation,
                          class: "form-control",
                          rows: 4 %>
        </div>

        <div class="d-flex justify-content-between">
          <%= link_to "戻る",
                      public_group_path(@group),
                      class: "btn btn-secondary" %>

          <%= f.submit "更新する", class: "btn btn-primary" %>
        </div>

      <% end %>

    </div>
  </div>

</div>
