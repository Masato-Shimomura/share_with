<div class="container mt-4">

  <!-- グループ基本情報 -->
  <div class="card mb-4">
    <div class="card-body">
      <h2 class="card-title mb-2"><%= @group.name %></h2>

      <p class="text-muted mb-2">
        <strong>説明：</strong><%= @group.explanation %>
      </p>

      <p class="mb-0">
        <strong>作成者：</strong>
        <% if @group.owner.present? %>
          <%= @group.owner.last_name %> <%= @group.owner.first_name %>
        <% else %>
          （退会済みユーザー）
        <% end %>
      </p>
    </div>
  </div>

  <!-- メンバー一覧 -->
  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title mb-3">メンバー一覧</h5>
      <ul class="list-group list-group-flush">
        <% @members.each do |member| %>
          <li class="list-group-item">
            <%= member.last_name %> <%= member.first_name %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <!-- 投稿エリア -->
  <div class="row g-4">

    <!-- 投稿フォーム -->
    <div class="col-md-6">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title mb-3">新規投稿</h5>

          <%= render 'public/shared/error_messages', resource: @post %>

          <%= form_with model: [@group, @post],
                        url: public_group_posts_path(@group),
                        local: true do |f| %>

            <div class="mb-3">
              <%= f.label :title, "作業名・イベント名", class: "form-label" %>
              <%= f.text_field :title, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :body, "詳細メモ", class: "form-label" %>
              <%= f.text_area :body, rows: 4, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :start_at, "開始日時", class: "form-label" %><br>
              <%= f.datetime_select :start_at %>
            </div>

            <div class="mb-3">
              <%= f.label :end_at, "終了日時", class: "form-label" %><br>
              <%= f.datetime_select :end_at %>
            </div>

            <div class="text-end">
              <%= f.submit "投稿する", class: "btn btn-primary" %>
            </div>

          <% end %>
        </div>
      </div>
    </div>

    <!-- 投稿一覧 -->
    <div class="col-md-6">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title mb-3">投稿一覧</h5>

          <% @posts.each do |post| %>
            <div class="border-bottom pb-2 mb-3">
              <p class="mb-1"><strong><%= post.title %></strong></p>
              <p class="text-muted mb-1"><%= post.body.truncate(80) %></p>
              <small class="text-muted">
                投稿者：<%= post.user.last_name %> <%= post.user.first_name %>
              </small>

              <div class="mt-2">
                <%= link_to "詳細",
                            public_group_post_path(@group, post),
                            class: "btn btn-sm btn-outline-primary" %>

                <%= link_to "コメント",
                            public_group_post_comments_path(@group, post),
                            class: "btn btn-sm btn-outline-secondary" %>
              </div>
            </div>
          <% end %>

        </div>
      </div>
    </div>

  </div>

  <!-- 操作ボタン -->
  <div class="d-flex flex-wrap gap-2 mt-4">

    <%= link_to "メンバー招待",
                invite_existing_public_group_path(@group),
                class: "btn btn-outline-primary" %>

    <%= link_to "カレンダーを見る",
                calendar_public_group_path(@group),
                class: "btn btn-outline-primary" %>

    <%= link_to "グループ退会",
                confirm_withdraw_public_group_path(@group),
                class: "btn btn-outline-danger" %>

    <%= link_to "グループ一覧へ戻る",
                public_groups_path,
                class: "btn btn-light" %>

    <% if current_user.id == @group.owner_id %>
      <%= link_to "グループ編集",
                  edit_public_group_path(@group),
                  class: "btn btn-primary" %>

      <%= link_to "グループ削除",
                  public_group_path(@group),
                  method: :delete,
                  data: { confirm: "本当に削除しますか？" },
                  class: "btn btn-outline-danger" %>
    <% end %>

  </div>

</div>
