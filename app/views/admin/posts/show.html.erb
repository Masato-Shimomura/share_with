<h1>投稿詳細</h1>

<table border="1" cellpadding="8" cellspacing="0">
  <tr>
    <th>ID</th>
    <td><%= @post.id %></td>
  </tr>

  <tr>
    <th>タイトル</th>
    <td><%= @post.title %></td>
  </tr>

  <tr>
    <th>本文</th>
    <td><%= simple_format(@post.body) %></td>
  </tr>

  <tr>
    <th>投稿者</th>
    <td>
      <%= @post.user.last_name %> <%= @post.user.first_name %>
    </td>
  </tr>

  <tr>
    <th>グループ</th>
    <td>
      <%= link_to @post.group.name, admin_group_path(@post.group) %>
    </td>
  </tr>

  <tr>
    <th>投稿日</th>
    <td><%= @post.created_at.strftime("%Y/%m/%d %H:%M") %></td>
  </tr>

  <tr>
    <th>最終更新</th>
    <td><%= @post.updated_at.strftime("%Y/%m/%d %H:%M") %></td>
  </tr>
</table>

<br>

<%= link_to "編集する", edit_admin_post_path(@post) %> |
<%= link_to "投稿一覧に戻る", admin_posts_path %>
